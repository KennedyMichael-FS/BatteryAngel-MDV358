<resources>
    <style name="Theme.BatteryAngel" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Button style. -->
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <!-- No explicit text color declaration -->
    </style>
    <style name="Theme.BatteryAngel.Relentless">
        <item name="colorPrimary">@color/relentless_primary</item>
        <item name="colorPrimaryVariant">@color/relentless_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/relentless_primary_variant</item>
        <item name="android:buttonTint">@color/relentless_primary</item>
        <!-- Button style. -->
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>